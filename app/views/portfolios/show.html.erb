<style>
  .center {
    text-align: center;
  }

  table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
  }

  td, th {
      border-bottom: 1px solid #c6c6c6;
      border-top: 1px solid #c6c6c6;
      text-align: left;
      padding: 8px;
  }

  tr:nth-child(even).port {
      background-color: #dddddd;
  }
</style>

<h1><%= @portfolio.name %></h1>
<div><p><%= link_to "Back to home", "/" %></p></div>

<%= form_tag "/portfolios/#{@portfolio.id}", method: :get do %>
  <div>
    <%= text_field_tag :ticker %>
    <%= submit_tag "Find stock" %>
  </div>
<% end %>

<h2><a href="#"><%= @name %></a></h2>
<h4><%= @symbol %></h4>
<div><%= @time %></div>

<p>
  <table class="inv">
    <tr>
      <td>Current price:</td>
      <td><%= number_to_currency(@current_price) %></td>
    </tr>
    <tr>
      <td>Last price:</td>
      <td><%= number_to_currency(@close_price) %></td>
    </tr>
    <tr>
      <td>Day change:</td>
      <td><%= @percent_change %>%</td>
    </tr>
  </table>
</p>

<div>
  <table>
    <tr class="port">
      <th>Investments</th>
      <th class="center">1 Mo. Return</th>
      <th class="center">YTD Return</th>
      <th class="center">Since Inception Return</th>
      <th class="center">Alpha</th>
      <th class="center">Risk</th>
      <th class="center">Risk Adjusted Return</th>
      <th class="center">Correlation</th>
    </tr>
    <% @portfolio.investments.each do |investment| %>
    <tr class="port">
      <td><a href="/investments/<%= investment.id %>"><%= investment.ticker %></td>
      <td class="center">2%</td>
      <td class="center">8%</td>
      <td class="center">30%</td>
      <td class="center">.90</td>
      <td class="center">16.1%</td>
      <td class="center">.40</td>
      <td class="center">.72</td>
    </tr>
    <% end %>
  </table>
</div>
