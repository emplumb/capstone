<div class="container content">

  <p><%= link_to "Create new portfolio", "/portfolios/new", class: "btn btn-success" %></p>

  <h1 class="text-center">Top 20 Monthly Performance</h1>
  <div class="panel panel-blue margin-bottom-40">
    <div class="panel-heading">
      <i class="fa fa-tasks"></i>
    </div>
    <div class="panel-body">
      <table class="table table-hover">
        <tr>
          <th>Portfolio</th>
          <th class="center">1 Mo. Return</th>
          <th class="center">YTD Return</th>
          <th class="center">Since Inception Return</th>
          <th class="center">Alpha</th>
          <th class="center">Risk</th>
          <th class="center">Risk Adjusted Return</th>
          <th class="center">Correlation</th>
        </tr>
        <% @portfolios.each do |portfolio| %>
        <tr>
          <td><strong><a href="/portfolios/<%= portfolio.id %>"><%= portfolio.name %></a></strong></td>
          <td class="text-center">2%</td>
          <td class="text-center">8%</td>
          <td class="text-center">30%</td>
          <td class="text-center">.90</td>
          <td class="text-center">16.1%</td>
          <td class="text-center">.40</td>
          <td class="text-center">.72</td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>



