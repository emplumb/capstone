<%= form_tag "/investments", method: :get do %>
  <div>
    <%= text_field_tag :ticker %>
    <%= submit_tag "Find stock" %>
  </div>
<% end %>

<h2><a href="#"><%= @name %></a></h2>
<h4><%= @symbol %></h4>
<div><%= @time %></div>
<p>
  <table>
    <tr>
      <td>Current price:</td>
      <td><%= number_to_currency(@current_price) %></td>
    </tr>
    <tr>
      <td>Last price:</td>
      <td><%= number_to_currency(@close_price) %></td>
    </tr>
    <tr>
      <td>Day change:</td>
      <td><%= @percent_change %>%</td>
    </tr>
  </table>
</p>
