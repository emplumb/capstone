<style>
  .center {
    text-align: center;
  }

  table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
  }

  td, th {
      border-bottom: 1px solid #c6c6c6;
      border-top: 1px solid #c6c6c6;
      text-align: left;
      padding: 8px;
  }

  tr:nth-child(even) {
      background-color: #dddddd;
  }
</style>

<h1 class="center">Leaderboard</h1>
  <table>
    <tr>
      <th>Portfolio</th>
      <th class="center">1 Mo. Return</th>
      <th class="center">YTD Return</th>
      <th class="center">Since Inception Return</th>
      <th class="center">Alpha</th>
      <th class="center">Risk</th>
      <th class="center">Risk Adjusted Return</th>
      <th class="center">Correlation</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><a href="/users/<%= user.id %>"><%= user.username %></a></td>
      <td class="center">2%</td>
      <td class="center">8%</td>
      <td class="center">30%</td>
      <td class="center">.90</td>
      <td class="center">16.1%</td>
      <td class="center">.40</td>
      <td class="center">.72</td>
    </tr>
    <% end %>
  </table>

